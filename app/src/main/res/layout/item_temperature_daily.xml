<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sun.weatherforecats.data.model.WeatherDaily" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#ECECEC">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/imageViewAvatar"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:src="@drawable/ic_weather"
                android:padding="@dimen/dp_16"
                app:layout_constraintStart_toEndOf="@id/textViewTemperatureHoursUnit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/textViewTemperatureHours"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/textViewTimeHours"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:text="23 - 30"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/color_orange_400" />
            <TextView
                android:id="@+id/textViewTemperatureHoursUnit"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/textViewTemperatureHours"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/c"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/color_orange_400" />

            <TextView
                android:id="@+id/textViewTimeHours"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_56"
                android:gravity="center"
                android:text="27/13/2019"
                android:padding="@dimen/dp_16"
                android:textColor="@color/color_primary"
                android:background="@color/color_orange_400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Overcast clouds"
                android:layout_marginStart="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/textViewTemperatureHours"
                app:layout_constraintStart_toEndOf="@id/textViewTimeHours"
                app:layout_constraintEnd_toStartOf="@id/imageViewAvatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>